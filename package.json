{
  "name": "uttype",
  "type": "module",
  "version": "0.11.0",
  "packageManager": "pnpm@9.15.1",
  "description": "Tiny helper library with some useful functions / types.",
  "author": "alexzhang1030",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzhang1030/uttype.git"
  },
  "keywords": [
    "types",
    "utility",
    "tiny",
    "helper"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "pnpm run test && tsup",
    "release": "bumpp --commit \"chore: release v%s\" --push --tag && pnpm publish",
    "test": "tsc --noEmit && vitest --run",
    "prepare": "simple-git-hooks",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "@type-challenges/utils": "^0.1.1",
    "bumpp": "^9.9.2",
    "eslint": "^9.17.0",
    "lint-staged": "^15.2.11",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": [
      "eslint --fix"
    ]
  }
}
